<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Application Offline</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cruise.AppOffline.styles.css" asp-append-version="true" /> *@
    <style>
        html, body {
            padding: 0;
            margin: 0;
            width: 100%;
            height: 100%;
        }

        * {
            box-sizing: border-box;
        }

        body {
            text-align: center;
            padding: 0;
            background: #007aff;
            color: #fff;
            font-family: Open Sans;
        }

        h1 {
            font-size: 50px;
            font-weight: 100;
            text-align: center;
        }

        body {
            font-family: Open Sans;
            font-weight: 100;
            font-size: 20px;
            color: #fff;
            text-align: center;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
        }

        article {
            display: block;
            width: 700px;
            padding: 50px;
            margin: 0 auto;
        }

        a {
            color: #fff;
            font-weight: bold;
        }

            a:hover {
                text-decoration: none;
            }

        svg {
            width: 75px;
            margin-top: 1em;
        }
    </style>
</head>
<body>
    <article>
        <div class="text-center">
            <img src="/img/cruise-america-logo-full-white.svg" />
        </div>              
        @RenderBody()        
    </article>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>